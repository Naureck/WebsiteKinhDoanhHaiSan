@model List<OnlineShop.Models.CartItem>
@{
    ViewBag.Title = "Giỏ hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section jsFooter{

    <script src="/assets/client/js/controller/cartController.js"></script>
}

<style>
.btn-in-cart
{
    color:white;
    background-color: #0092ff;
}

.btn-in-cart:hover
{
    color:white;
    background-color: #0055a7;
}
.bg-in-cart
{
    text-align:center;
    width:100%;
    margin-top:200px;
}
</style>
<div class="content">
    <div class="section group">
        @if (Model.Count > 0)
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>Mã SP</td>
                        <td>Tên SP</td>
                        <td>Ảnh SP</td>
                        <td>Số lượng</td>
                        <td>Đơn giá</td>
                        <td>Thành tiền</td>
                        <td></td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Product.ID</td>
                            <td>@item.Product.Name</td>
                            <td><img src="@item.Product.Image" width="100" /></td>
                            <td><input type="text" class="txtQuantity" data-id="@item.Product.ID" value="@item.Quantity" /></td>
                            <td>@item.Product.Price.GetValueOrDefault(0).ToString("N0")</td>
                            <td>@((item.Product.Price.GetValueOrDefault(0) * item.Quantity).ToString("N0"))</td>
                            <td><a href="#" data-id="@item.Product.ID" class="btn-delete">Xoá</a></td>
                        </tr>
                    }

                </tbody>
            </table>

            <button id="btnContinue" class="btn btn-in-cart">Tiếp tục mua hàng</button>
            <button id="btnUpdate" class="btn btn-in-cart">Cập nhật giỏ hàng</button>
            <button id="btnDeleteAll" class="btn btn-in-cart">Xoá giỏ hàng</button>
            <button id="btnPayment" class="btn btn-in-cart">Thanh toán</button>
        }
        else
        {
            <div class="bg-in-cart">
                <span class="alert alert-danger">Chưa có sản phẩm nào trong giỏ hàng</span>
            </div>
            
        }

    </div>
</div>
